# Dockerfile to test the pre-built Ubuntu 16.04 KeyTalk client by installing it

FROM ubuntu:16.04

RUN apt-get update
RUN apt-get -y install openssh-client procps apache2 hdparm unzip lsb-release
RUN a2enmod ssl

# install mailserver, suppressing any prompts
RUN DEBIAN_FRONTEND=noninteractive apt-get -y install mailutils postfix

ENTRYPOINT service postfix restart && ./bootstrap/worker_start_installation_test.sh